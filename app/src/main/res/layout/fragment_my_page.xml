<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.example.wintopia.view.mypage.MyPageFragment" />
        <variable
            name="vm"
            type="com.example.wintopia.view.mypage.MyPageViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.mypage.MyPageFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="360dp"
                    android:layout_height="266dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/background_radius"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.47"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:text="MY FARM"
                        android:fontFamily="@font/kotra"
                        android:textAlignment="center"
                        android:textColor="#937F76"
                        android:textSize="38dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/tvMyPageMyfarm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="20dp"
                        android:text="얼룩이 보급 팜"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        />

                <View
                    android:layout_width="280dp"
                    android:layout_height="2dp"
                    android:background="#ff9b9b"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMyPageMyfarm"
                    />


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="60dp"
                        android:text="전화번호:"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMyPageMyfarm"
                        />

                    <TextView
                        android:id="@+id/tvMyPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:text="01012341234"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/tvMyPageMyfarm"
                        />
                <View
                    android:layout_width="280dp"
                    android:layout_height="2dp"
                    android:background="#ff9b9b"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    />

                <TextView
                    android:id="@+id/tvMypageCount"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/top_round"
                    android:gravity="center_vertical"
                    android:text="50"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    tools:ignore="RtlCompat"
                    app:layout_constraintEnd_toStartOf="@+id/tvMypageBaby"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="66dp"
                    android:layout_marginTop="10dp"
                    android:text="개체 수"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMypageCount" />


                <TextView
                    android:id="@+id/tvMypageBaby"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/top_round"
                    android:gravity="center_vertical"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    tools:ignore="RtlCompat"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="신생우"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMypageBaby"
                    />


                <TextView
                    android:id="@+id/tvMypageGender"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/top_round"
                    android:gravity="center_vertical"
                    android:text="35/15"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvMypageBaby"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:text="암소/숫소"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMypageGender" />

                <TextView
                    android:id="@+id/img1"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/top_round"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_week"
                        android:layout_width="310dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="360dp"
                    android:layout_height="720dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_radius"
                    android:orientation="vertical"
                    android:translationZ="-2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    />


                <TextView
                    android:id="@+id/img2"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/top_round"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img1"
                    />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="310dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img1"
                    />

                <android.widget.Button
                    android:id="@+id/btnMyPageLogout"
                    android:layout_width="316dp"
                    android:layout_height="46dp"
                    android:layout_marginBottom="48dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/background_radius_brown"
                    android:text="Sign Out"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linechart" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>