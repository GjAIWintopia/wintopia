    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="36dp"
        android:gravity="right|center_vertical">
        <TextView
            android:id="@+id/hiddenBtnEdt"
            android:layout_width="88dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:paddingTop="24dp"
            android:layout_marginLeft="78dp"
            android:background="@drawable/background_half_radius_right"
            android:text="@string/edit"
            android:clickable="false"
            android:elevation="@dimen/cardview_default_elevation"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:translationZ="10dp"/>

        <TextView
            android:id="@+id/hiddenBtnDel"
            android:layout_width="88dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="144dp"
            android:background="#ffc0cb"
            android:clickable="false"
            android:elevation="@dimen/cardview_default_elevation"
            android:paddingTop="24dp"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="20dp"
            android:paddingLeft="34dp"
            tools:layout_editor_absoluteY="10dp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/clItem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="36dp"
        android:translationZ="10dp"
        android:gravity="right|center_vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="50dp">
        <WebView
            android:id="@+id/wvItemImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/background_radius" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="얼룩이"
            android:layout_marginStart="120dp"
            android:textColor="#E0C2A6"
            android:textSize="34sp"/>

        <TextView
            android:id="@+id/tvItemId"
            android:layout_width="150dp"
            android:layout_height="19dp"
            android:text="고유번호 : 22111001"
            android:textColor="#E0C2A6"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="120dp" />
    </androidx.cardview.widget.CardView>


