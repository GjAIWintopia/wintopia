<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="list"
            type="com.example.wintopia.view.list.ListFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="7dp"
        android:background="@drawable/background_radius">


        <WebView
            android:id="@+id/wvItemImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/background_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="18dp"
            android:text="얼룩이"
            android:textColor="#2E2E2E"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/wvItemImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemId"
            android:layout_width="151dp"
            android:layout_height="19dp"
            android:layout_marginBottom="18dp"
            android:text="고유번호 : 22111001"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/hiddenBtnEdt"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#ffc0cb"
            android:text="수정"
            android:textAlignment="center"
            android:paddingTop="32dp"
            android:textColor="#fff"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/clItem"
            app:layout_constraintTop_toTopOf="@+id/clItem" />

        <TextView
            android:id="@+id/hiddenBtnDel"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/background_half_radius_right"
            android:text="삭제"
            android:textAlignment="center"
            android:paddingTop="32dp"
            android:textColor="#fff"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/hiddenBtnEdt"
            tools:layout_editor_absoluteY="10dp" />
        <!--    <View-->
        <!--        android:background="#ddd"-->
        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="0.8dp"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>