<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="list"
            type="com.example.wintopia.view.list.ListFragment" />
    </data>
<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/background_radius"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/hiddenBtnEdt"
            android:layout_width="66dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#ffc0cb"
            android:paddingTop="32dp"
            android:layout_marginLeft="88dp"
            android:text="수정"
            android:clickable="false"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/hiddenBtnDel"
            android:layout_width="66dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:background="@drawable/background_half_radius_right"
            android:paddingTop="32dp"
            android:layout_marginLeft="158dp"
            android:text="삭제"
            android:clickable="false"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="24dp"
            tools:layout_editor_absoluteY="10dp" />
        <!--    <View-->
        <!--        android:background="#ddd"-->
        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="0.8dp"/>-->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/clItem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_radius"
        >


        <WebView
            android:id="@+id/wvItemImg"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_radius" />

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="얼룩이"
            android:layout_marginStart="120dp"
            android:textColor="#2E2E2E"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvItemId"
            android:layout_width="150dp"
            android:layout_height="19dp"
            android:text="고유번호 : 22111001"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="120dp" />
    </FrameLayout>

</FrameLayout>
</layout>