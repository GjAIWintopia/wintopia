<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:id="@+id/flCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.camera.CameraFragment">

    <TextView
        android:id="@+id/tvCameraTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="젖소 키우는 꿀팁?"
        android:textSize="40sp" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbCameraCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="240dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/camera"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbCameraGal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom"
        android:src="@drawable/gallery"
        />

    <ImageView
        android:id="@+id/imgCameraPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/standingcow" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/cow"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

</FrameLayout>
</layout>