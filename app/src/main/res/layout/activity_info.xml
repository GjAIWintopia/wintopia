<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
            <variable
                name="activity"
                type="com.example.wintopia.view.info.InfoActivity" />
            <variable
                name="vm"
                type="com.example.wintopia.view.info.EditViewModel"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.info.InfoActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="#B4DAF8"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/imgInfoBack"
        android:text="상세정보"
        android:textColor="#0D7ACF"
        android:textSize="38dp"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/wvInfoPhto"
        android:layout_width="350dp"
        android:layout_height="153dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvInfoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"

        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="고유번호: 20111001"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoName" />

    <TextView
        android:id="@+id/tvInfoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="건강상태: 양호"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoBirth"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoBirth"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoBirth" />

    <TextView
        android:id="@+id/tvInfoBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="출생일: 20201110"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoId"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoId"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoId" />

    <TextView
        android:id="@+id/tvInfoName"
        android:layout_width="200dp"
        android:layout_height="67dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="얼룩이"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wvInfoPhto" />

    <ImageView
        android:id="@+id/imgInfoStar"
        android:layout_width="58dp"
        android:layout_height="67dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toEndOf="@+id/tvInfoName"
        app:layout_constraintTop_toTopOf="@+id/tvInfoName" />

    <TextView
        android:id="@+id/tvInfoFax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Fax.062.512.4591"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoTel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoTel"
        app:layout_constraintTop_toTopOf="@+id/tvInfoTel" />

    <TextView
        android:id="@+id/tvInfoTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tel.062.573-4591"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoStatus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoStatus"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoStatus" />

    <Button
        android:id="@+id/btnInfoEdit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_radius"
        android:text="수정하기"
        app:layout_constraintBottom_toBottomOf="@+id/btnInfoDelete"
        app:layout_constraintEnd_toStartOf="@+id/btnInfoDelete"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoFax"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnInfoDelete"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/background_radius"
        android:text="삭제하기"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgInfoBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--        <ImageView-->
    <!--            android:id="@+id/imageView9"-->
    <!--            android:layout_width="50dp"-->
    <!--            android:layout_height="50dp"-->
    <!--            android:layout_marginStart="16dp"-->
    <!--            android:layout_marginTop="16dp"-->
    <!--            android:src="@drawable/back"-->



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>